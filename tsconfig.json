{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": false,
    "module": "ESNext",
    "strict": true,
    "noImplicitOverride": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "incremental": false
  },
  "lib": ["es2022", "dom"]
}
