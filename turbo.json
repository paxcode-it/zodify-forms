{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "test": {
      "dependsOn": ["^test"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "deploy": {
      "dependsOn": ["build", "lint"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    }
  }
}
